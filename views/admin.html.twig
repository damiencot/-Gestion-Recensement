{% extends "layout.html.twig" %}
{% set adminMenu = true %}

{% block title %}Recherche{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <!--
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <ul class="nav nav-tabs nav nav-pills nav-justified">
                <li><a href="#users" data-toggle="tab">Users</a></li>
                <li><a href="#recenses" data-toggle="tab">Recenses</a></li>
            </ul>
        </div>
    </div>
    -->
    <div class="tab-content">

        <div class="tab-pane fade in active adminTable" id="recenses">

            <div class="table-responsive">
                <table class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>date de naissance</th>
                            <th>Enregistr√©e le</th><!-- Actions column -->
                            <th>Commune</th>
                        </tr>
                    </thead>
                    {% for recense in recenses %}


                            <tr>
                                <td><a class="recenseTitle" href="/recense/{{ recense.id }}">{{ recense.nom }}</a></td>
                                <td>{{ recense.prenom | truncate(60) }}</td>
                                <td>{{ recense.dateNaissance | truncate(60) }}</td>
                                <td>{{ recense.dateEnregistrement | truncate(60) }}</td>
                                <td>{{ recense.commune | truncate(60) }}</td>
        
                                <td>
                                    <a href="/admin/recense/{{ recense.id }}/edit" class="btn btn-info btn-xs" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                                    <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#recenseDialog{{ recense.id }}"><span class="glyphicon glyphicon-remove"></span>
                                    </button>
                                    <div class="modal fade" id="recenseDialog{{ recense.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                                </div>
                                                <div class="modal-body">
                                                    Do you really want to delete this recense ?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                    <a href="/admin/recense/{{ recense.id }}/delete" class="btn btn-danger">Confirm</a>
                                                </div>
                                            </div><!-- /.modal-content -->
                                        </div><!-- /.modal-dialog -->
                                    </div><!-- /.modal -->
                                </td>
                            </tr>
                        {% endfor %}
                </table>
            </div>
            <a href="/admin/recense/add"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add recense</button></a>
        </div>
    </div>
{% endblock %}
