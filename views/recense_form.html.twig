            {{ form_widget(recenseForm.dateNaissance, { 'attr':  {
                'class': 'form-control',
                'rows': '8'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(recenseForm.adresseMail, null, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
        }}) }}
        <div class="col-sm-6">
            {{ form_errors(recenseForm.adresseMail) }}
            {{ form_widget(recenseForm.adresseMail, { 'attr':  {
                'class': 'form-control',
                'rows': '8'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(recenseForm.telephonePortable, null, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
