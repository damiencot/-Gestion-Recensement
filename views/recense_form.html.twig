            <li><a href="#recenses" data-toggle="tab">Autres</a></li>
            <li><a href="#recenses" data-toggle="tab">Recensement</a></li>
            <li><a href="#recenses" data-toggle="tab">Documents</a></li>
            
        </ul>
    </div>
</div>

<div class="well">
{{ form_start(recenseForm, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        {{ form_label(recenseForm.nom, null, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
        }}) }}
        <div class="col-sm-6">
            {{ form_errors(recenseForm.nom) }}
            {{ form_widget(recenseForm.nom, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(recenseForm.prenom, null, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
        }}) }}
